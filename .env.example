# Application Environment
APP_ENV=dev
APP_DEBUG=1
APP_URL=http://127.0.0.1:8000
APP_KEY=change-me-to-random-32-char-string

# Database Configuration
# Options: mysql, sqlite
DB_CONNECTION=mysql

# MySQL Settings (used when DB_CONNECTION=mysql)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=ss_ltd
DB_USER=root
DB_PASS=

# SQLite Settings (used when DB_CONNECTION=sqlite, for dev only)
# DB_DATABASE=/path/to/storage/app.db

# Business Logic
SERVICE_AREA_RADIUS_MILES=60

# Session Configuration (optional overrides)
# SESSION_NAME=ss_ltd_session
# SESSION_LIFETIME=7200

# File Upload Limits (optional, in bytes)
# MAX_UPLOAD_SIZE=10485760

# Dev Tools (only works when APP_DEBUG=1)
# SS_DEV_TOOLS_KEY=some-secret-key-for-remote-dev-access
