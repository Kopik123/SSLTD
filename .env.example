# Application Configuration
# Copy this file to .env and customize for your environment

# Environment: dev, staging, production
APP_ENV=dev

# Debug mode: 1 = enabled (show errors, dev tools), 0 = disabled (production)
APP_DEBUG=1

# Application URL (used for generating links, CORS, etc.)
APP_URL=http://127.0.0.1:8000

# Application secret key (CHANGE THIS in production!)
# Generate a random string (32+ characters)
APP_KEY=change-me-to-random-string-32chars

# Database Configuration
# Connection type: mysql or sqlite
DB_CONNECTION=mysql

# MySQL Configuration (used when DB_CONNECTION=mysql)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=ss_ltd
DB_USER=root
DB_PASS=

# SQLite Configuration (used when DB_CONNECTION=sqlite)
# Path relative to project root or absolute path
DB_DATABASE=./storage/app.db

# Service Area Configuration
# Radius in miles for service area validation
SERVICE_AREA_RADIUS_MILES=60

# Optional: Dev Tools Security Key
# If set, allows dev tools access from non-localhost IPs
# Leave empty for localhost-only access
SS_DEV_TOOLS_KEY=
